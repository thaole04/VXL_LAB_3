#include "software_timer.h"

int timer0_counter = 0;
int timer0_flag = 0;

int timer_normal_mode = 0;
int timer_normal_mode_flag = 0;

void setTimer0(int duration){
	timer0_counter = duration;
	timer0_flag = 0;
}
void setTimerNormalMode(int duration){
	timer_normal_mode = duration;
	timer_normal_mode_flag = 0;
}

void timerRun() {
	if (timer0_counter > 0){
		timer0_counter--;
		if (timer0_counter <= 0) {
			timer0_flag = 1;
		}
	}
	if (timer_normal_mode > 0){
		timer_normal_mode--;
		if (timer_normal_mode <= 0){
			timer_normal_mode_flag = 1;
		}
	}
}
