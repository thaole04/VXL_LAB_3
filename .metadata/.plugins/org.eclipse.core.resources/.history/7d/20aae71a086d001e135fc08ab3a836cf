#include "control_leds_segment.h"

void setValueSEGX1(int num){
	switch(num){
	case 0:
		HAL_GPIO_WritePin(SEGX_A_GPIO_Port, SEGX_A_Pin, SET);
		HAL_GPIO_WritePin(SEGX_B_GPIO_Port, SEGX_B_Pin, SET);
		HAL_GPIO_WritePin(SEGX_C_GPIO_Port, SEGX_C_Pin, SET);
		HAL_GPIO_WritePin(SEGX_D_GPIO_Port, SEGX_D_Pin, SET);
		break;
	case 1:
		HAL_GPIO_WritePin(SEGX_A_GPIO_Port, SEGX_A_Pin, SET);
		HAL_GPIO_WritePin(SEGX_B_GPIO_Port, SEGX_B_Pin, SET);
		HAL_GPIO_WritePin(SEGX_C_GPIO_Port, SEGX_C_Pin, SET);
		HAL_GPIO_WritePin(SEGX_D_GPIO_Port, SEGX_D_Pin, SET);
		break;
	case 2:
		HAL_GPIO_WritePin(SEGX_A_GPIO_Port, SEGX_A_Pin, SET);
		HAL_GPIO_WritePin(SEGX_B_GPIO_Port, SEGX_B_Pin, SET);
		HAL_GPIO_WritePin(SEGX_C_GPIO_Port, SEGX_C_Pin, SET);
		HAL_GPIO_WritePin(SEGX_D_GPIO_Port, SEGX_D_Pin, SET);
		break;
	case 3:
		HAL_GPIO_WritePin(SEGX_A_GPIO_Port, SEGX_A_Pin, SET);
		HAL_GPIO_WritePin(SEGX_B_GPIO_Port, SEGX_B_Pin, SET);
		HAL_GPIO_WritePin(SEGX_C_GPIO_Port, SEGX_C_Pin, SET);
		HAL_GPIO_WritePin(SEGX_D_GPIO_Port, SEGX_D_Pin, SET);
		break;
	case 4:
		HAL_GPIO_WritePin(SEGX_A_GPIO_Port, SEGX_A_Pin, SET);
		HAL_GPIO_WritePin(SEGX_B_GPIO_Port, SEGX_B_Pin, SET);
		HAL_GPIO_WritePin(SEGX_C_GPIO_Port, SEGX_C_Pin, SET);
		HAL_GPIO_WritePin(SEGX_D_GPIO_Port, SEGX_D_Pin, SET);
		break;
	case 5:
		HAL_GPIO_WritePin(SEGX_A_GPIO_Port, SEGX_A_Pin, SET);
		HAL_GPIO_WritePin(SEGX_B_GPIO_Port, SEGX_B_Pin, SET);
		HAL_GPIO_WritePin(SEGX_C_GPIO_Port, SEGX_C_Pin, SET);
		HAL_GPIO_WritePin(SEGX_D_GPIO_Port, SEGX_D_Pin, SET);
		break;
	case 6:
		HAL_GPIO_WritePin(SEGX_A_GPIO_Port, SEGX_A_Pin, SET);
		HAL_GPIO_WritePin(SEGX_B_GPIO_Port, SEGX_B_Pin, SET);
		HAL_GPIO_WritePin(SEGX_C_GPIO_Port, SEGX_C_Pin, SET);
		HAL_GPIO_WritePin(SEGX_D_GPIO_Port, SEGX_D_Pin, SET);
		break;
	case 7:
		HAL_GPIO_WritePin(SEGX_A_GPIO_Port, SEGX_A_Pin, SET);
		HAL_GPIO_WritePin(SEGX_B_GPIO_Port, SEGX_B_Pin, SET);
		HAL_GPIO_WritePin(SEGX_C_GPIO_Port, SEGX_C_Pin, SET);
		HAL_GPIO_WritePin(SEGX_D_GPIO_Port, SEGX_D_Pin, SET);
		break;
	case 8:
		HAL_GPIO_WritePin(SEGX_A_GPIO_Port, SEGX_A_Pin, SET);
		HAL_GPIO_WritePin(SEGX_B_GPIO_Port, SEGX_B_Pin, SET);
		HAL_GPIO_WritePin(SEGX_C_GPIO_Port, SEGX_C_Pin, SET);
		HAL_GPIO_WritePin(SEGX_D_GPIO_Port, SEGX_D_Pin, SET);
		break;
	case 9:
		HAL_GPIO_WritePin(SEGX_A_GPIO_Port, SEGX_A_Pin, SET);
		HAL_GPIO_WritePin(SEGX_B_GPIO_Port, SEGX_B_Pin, SET);
		HAL_GPIO_WritePin(SEGX_D_GPIO_Port, SEGX_C_Pin, SET);
		HAL_GPIO_WritePin(SEGX_D_GPIO_Port, SEGX_D_Pin, SET);
		break;
	}
}
